#!/usr/bin/env ruby

require 'cloudsaw'

require "optparse"
opts = ARGV.getopts("f", "debug", "force")

method = (opts["f"] || opts["force"]) ? :"delete!" : :delete

s3_client = CloudSaw.create_s3_client
ARGV.each do |bucket_name|
  bucket = s3_client.buckets[bucket_name]
  bucket.send method
  puts "Deleted #{bucket_name}"
end
