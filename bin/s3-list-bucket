#!/usr/bin/env ruby

require 'aws-cli'

require "optparse"
opts = ARGV.getopts("v", "verbose")

s3_client = AwsCli.create_s3_client
ARGV.each do |bucket_name|
  bucket = s3_client.buckets[bucket_name]
  bucket.objects.each do |object|
    if opts["verbose"] || opts["v"]
      puts object.key
    else
      puts object.key
    end
  end
end
