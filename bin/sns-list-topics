#!/usr/bin/env ruby

require 'aws-cli'

require "optparse"
opts = ARGV.getopts("arn")

sns_client = AwsCli.create_sns_client
sns_client.topics.to_a.sort { |x,y| x.name <=> y.name }.each do |topic|
  name = topic.name
  next if !ARGV.empty? and !ARGV.any? { |prefix| name.start_with? prefix }

  print name

  if opts["arn"]
    print "\t" + topic.arn
  end
  
  print "\n"
end
